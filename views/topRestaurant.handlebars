<h1><strong>人氣餐廳</strong></h1>
<hr />
<div class="row justify-content-center">
  {{#each restaurants}}
    <div class="card mb-4 shadow-sm flex-row" style="width: 700px; height: 180px">
      <img class="card-img-left col-5" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
            <h5>{{this.name}}</h5>
            <span class="badge badge-secondary">收藏數 {{this.FollowerCount}}</span>
            <div class="card-text" style="height: 50px; overflow: hidden">{{this.description}}</div>
            
            <a href="/restaurants/{{this.id}}"><button type="submit" class="btn btn-primary">Show</button></a>

            {{#if this.isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline"><button type="submit" class="btn btn-danger">移除最愛</button></form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST" class="d-inline"><button type="submit" class="btn btn-primary">加到最愛</button></form>
            {{/if}}
      </div>
    </div>
  {{/each}}
</div>